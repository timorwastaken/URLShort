  <title>URL List</title>
</head>
<body>
<header>
  <%- include('partials/_header'); %>
</header>

<main>
  <table>
    <tbody>
      <% for(const shortUrl in urlIndex) { %>
        <tr>
          <td><%= shortUrl %> </td>  
          <td><a href ="<%= urlIndex[shortUrl] %>"><%= urlIndex[shortUrl] %></a> </td>
          <td><a href ="/urls/<%= shortUrl %>"><button>update</button></a></td>
          <td> 
            <form action="/urls/<%= shortUrl %>/delete" method="post">
            <input type="submit" value="Delete">
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <button type="button">Add a URL</button>
</main>

<footer>
  <%- include('partials/_footer'); %>
</footer>
